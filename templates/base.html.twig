<!DOCTYPE html>
<html lang="cs>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}Welcome!{% endblock %}</title>

        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <div class="container p-4">
            <div class="d-flex justify-content-end align-items-center mb-3">
                {% if not app.user %}
                    <a href="{{ path('app_login') }}" class="btn btn-sm btn-light me-2">Přihlášení</a>
                    <a href="{{ path('app_register') }}" class="btn btn-sm btn-light">Registrace</a>
                {% else %}
                    <span class="me-2 text-muted">Dobrý den {{ app.user.username }}</span>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('admin') }}" class="btn btn-sm btn-light">Administrace</a>
                    {% endif %}
                    <a href="{{ path('app_logout') }}" class="btn btn-sm btn-light">Odhlásit se</a>
                {% endif %}
            </div>
            <header class="pb-3 mb-4 border-bottom text-center">
                <a class="h1 text-dark text-decoration-none" href="{{ path("app_homepage") }}">Reprodukční grafik</a>
            </header>

            {% block body %}{% endblock %}
        </div>    
    </body>
</html>
