{% extends 'base.html.twig' %}

{% block title %}Přihlašte se{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-4">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
            {% if app.user %}
                <div class="mb-3">
                    Jste přihlášen jako {{ app.user.username }} <a href="{{ path('app_logout') }}" class="btn btn-sm btn-light ms-3">Odhlásit se?</a>
                </div>
            {% else %}
                <form method="post">
                    <h1 class="h3 mb-3 font-weight-normal">Přihlašte se</h1>

                    <div class="mb-3">
                        <label for="inputEmail" class="form-label fw-bold">E-mail</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword" class="form-label fw-bold">Heslo</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <button class="btn btn-lg btn-primary" type="submit">
                        Přihlásit se
                    </button>
                </form>
            {% endif %}
    </div>
</div>
{% endblock %}
